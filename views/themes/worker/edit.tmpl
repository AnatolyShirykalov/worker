{{$actions := load_actions "show"}}
{{if $actions}}
  <div class="qor-page__header">
    {{$actions}}
  </div>
{{end}}

<div class="qor-page__body">
  {{render "shared/flashes"}}
  {{render "shared/errors"}}

  {{if .Result}}
    <div class="qor-form-container">
      <div class="mdl-grid" data-toggle="qor.workers">

        <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet">
          <p class="workers-label-title">{{t "qor_worker.jobs.Job Name" "Job Name"}}</p>
          <p class="workers-label-content">{{.Result.GetJobName}}</p>
        </div>

        <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet qor-worker--progress" data-worker-progress={{.Result.GetProgress}} data-worker-status={{.Result.GetStatus}}>
          <p class="workers-label-title">{{t "qor_worker.jobs.Status" "Status"}}</p>
          <p class="workers-label-content">
            <span class="qor-worker--progress-status">{{.Result.GetStatus}}</span> (<span class="qor-worker--progress-value">{{.Result.GetProgress}}</span>%)
          </p>
          <div id="qor-worker--progress" class="mdl-progress mdl-js-progress{{if .Result.GetResultsTable.TableCells}} has-errors-texts{{end}}"></div>
          {{if .Result.GetResultsTable.TableCells}}
            <a href="#" class="qor-worker--show-errors">{{t "worker.show_full_report" "Show Full Report"}}</a>
          {{end}}
        </div>

        {{if .Result.GetResultsTable.TableCells}}
          <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet hidden">
            <p class="workers-label-title">{{t "qor_worker.jobs.process_results" "Process Results"}}</p>
            <div class="qor-table-container workers-error-output">
              <table class="mdl-data-table mdl-js-data-table qor-table is-sortable is-upgraded">
                {{range $cells := .Result.GetResultsTable.TableCells}}
                  <tr>
                    {{range $cell := $cells}}
                      <td class="mdl-data-table__cell--non-numeric{{if $cell.Error}} worker-process-error{{end}}">
                        {{$cell.Value}}
                        {{if $cell.Error}}
                          <p>{{$cell.Error}}</p>
                        {{end}}
                      </td>
                    {{end}}
                  </tr>
                {{end}}
              </table>
            </div>
          </div>
        {{end}}

        <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet">
          <p class="workers-label-title">{{t "qor_worker.jobs.Process Log" "Process Log"}}</p>
          <div class="workers-log-output">{{range $log := .Result.GetLogs}}<p>{{$log}}</p>{{end}}</div>
        </div>

        {{if .Result.GetProgressText}}
          <div class="mdl-cell mdl-cell--4-col mdl-cell--12-col-tablet">
            <p class="workers-label-content">{{raw .Result.GetProgressText}}</p>
          </div>
        {{end}}

      </div>

      <div class="qor-workers-buttons">
          <div class="qor-workers-abort{{if (or (eq .Result.GetStatus "new") (eq .Result.GetStatus "running"))}} show{{else}} hidden{{end}}">
            <form action={{url_for .Result .Resource}} method="POST">
              <input type="hidden" name="_method" value="DELETE"/>
              <button type="submit" class="mdl-button mdl-js-button mdl-button--colored mdl-button--raised mdl-js-ripple-effect qor-button--accent">{{t "qor_worker.jobs.abort process" "Abort Process"}}</button>
            </form>
          </div>
          <div class="qor-workers-rerun{{if (eq .Result.GetStatus "done")}} show{{else}} hidden{{end}}">
            <form action={{print (url_for .Result .Resource) "/run"}} method="POST">
              <button type="submit" class="mdl-button mdl-button--colored mdl-button--raised mdl-js-button mdl-js-ripple-effect">{{t "qor_worker.jobs.rerun_process" "Rerun Process"}}</button>
            </form>
          </div>
      </div>
    </div>
  {{end}}
</div>
