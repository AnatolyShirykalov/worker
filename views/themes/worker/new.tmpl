{{$resource := .Resource}}
<div class="qor-page__body">
  <div class="qor-form-container">
    {{range $job := .Result.Jobs}}
      {{dt (print "worker.jobs." $job.Name) $job.Name}}
      <form action="{{url_for $resource}}" method="POST">
        {{render_form $job.Resource.NewStruct (new_metas $job.Resource)}}

        <div class="qor-form__actions">
          <button class="mdl-button mdl-button--colored mdl-button--raised mdl-js-button mdl-js-ripple-effect qor-button--save" type="submit">{{dt "worker.run_job" "Run"}}</button>
        </div>
      </form>
    {{end}}
  </div>
</div>
